#!/bin/bash

source "$(dirname "$0")"/test-common.bash

DIR="workflow"
MAKEFLOW_FILE="$DIR"/Makeflow

if ! [ -d "$DIR" ]; then
	weaver -N -O "$DIR" "$(dirname "$0")/bio.py"
fi

# do 20 and 30 first to get an early look at start/end
for pull in $(for exp in 20 32 22 24 26 28 30 31; do printf '%012d\t' $((1+1*2**exp)); done); do
	for scheduler in fifo-0; do
		for replication in push-async-1 push-async-0; do
			base="$(pwd)/test.${pull}.${scheduler}.${replication}"
			if [ -d "$base" ]; then
				echo "$base already exists; continuing"
				continue;
			fi
			run mkdir "$base" || exit 1
			echo "$CONFUGA_NODE_LIST" > "${base}/nodes.lst"

			eval "$CONFUGA_NODE_NUKE"
			runbg "$CHIRP_SERVER" --auth=unix --catalog-update=30s --challenge-dir="${base}/" --debug=all --debug-file="${base}/confuga.debug" --debug-rotate-max=0 --interface=127.0.0.1 --jobs --job-concurrency=0 --pid-file="${base}/confuga.pid" --port="$PORT" --root="confuga://${base}/confuga.root?scheduler=${scheduler}&replication=${replication}&pull-threshold=${pull}&nodes=file:${base}/nodes.lst" --superuser="unix:$(whoami)" --transient="${base}/confuga.transient" --inherit-default-acl

			run "$CHIRP" --auth=unix --debug=chirp --debug-file="${base}/chirp.debug" --timeout=60m localhost:"$PORT" put "$DIR/"

			run cp "$MAKEFLOW_FILE" "${base}/Makeflow"
			run "$MAKEFLOW" --batch-type=chirp --debug=all --debug-file="${base}/makeflow.debug" --debug-rotate-max=0 --working-dir="chirp://localhost:${PORT}/" --wrapper=$'{\n {}\n} > stdout.%% 2> stderr.%%' --wrapper-output='stdout.%%' --wrapper-output='stderr.%%' "${base}/Makeflow"

			run "$PARROT" -- cp -r "/chirp/localhost:${PORT}/.confuga/" "${base}/confuga-proc/"

			kill %1
			wait
			sleep 10
		done
	done
done

# vim: set noexpandtab tabstop=4:
